---
import { Image, getImage } from 'astro:assets';

import logo from '../assets/logo.svg';
import hamburgerIcon from '../assets/icon-hamburger.svg';
import closeIcon from '../assets/icon-close.svg';

import sidebarBgImg from '../assets/bg-pattern-about-1-mobile-nav-1.svg';

const { links } = Astro.props;

const sidebarBottomBg = await getImage({ src: sidebarBgImg });

const isDev = import.meta.env.DEV;
const baseUrl = import.meta.env.BASE_URL;

---
<header class="header">
  <Image class="header__logo" src={logo} alt="main site logo" loading="eager" />

  <nav class="header__nav">
    <ol class="nav__list">
      {links.map(({url, label}) => (<li class="nav__link"><a href={isDev ? url : baseUrl + url}>{label}</a></li>))}
    </ol>
  </nav>

  <div class="header__navtarget">
    <Image class="navtarget__icon" src={hamburgerIcon} alt="mobile nav icon" loading="eager" /> 
    <input class="navtarget__toggle" type="checkbox" name="toggle" />
    <div class="navtarget__sidebar" style={`background-image: url(${sidebarBottomBg.src})`}>
      <Image class="sidebar__icon" src={closeIcon} alt="mobile nav icon" loading="lazy" />
      <nav class="sidebar__nav">
        <ol class="nav__list">
          {links.map(({url, label}) => (<li class="nav__link"><a href={url}>{label}</a></li>))}
        </ol>
      </nav>
    </div>
    <div class="sidebar__opacity"></div>
  </div>
</header>
<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40px 25px;
    z-index: 0;
  }
  .header__logo {
    width: 128px;
    height: 32px;
  }
  .header__nav {
    display: none;
  }
  .navtarget__icon, .navtarget__toggle {
    width: 20px;
  }
  .header__navtarget {
    z-index: 1;
  }
  .navtarget__icon {
    height: 17px;
  }
  .navtarget__toggle {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    margin-left: -25px;
    height: 20px;
    cursor: pointer;
    z-index: 3;
    position: relative;
  }
  .navtarget__sidebar {
    display: none;
    background-repeat: no-repeat;
    background-position: bottom right -185%;
    padding: 25px;
    overflow-x: hidden;
    z-index: 2;
  }
  .navtarget__toggle:checked + .navtarget__sidebar {
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 0;
    right: 0;
    width: 68%;
    height: 100vh;
    background-color: var(--police-blue);
    z-index: 2;
  }
  .sidebar__icon {
    display: flex;
    flex-direction: row;
    align-self: flex-end;
    margin-top: 20px;
  }
  .navtarget__toggle:checked ~ .sidebar__opacity {
    background-color: rgba(0, 0, 0, 0.6);
    position: fixed;
    width: 100%;
    height: 100vh;
    top: 0;
    left: 0;
    z-index: 1;
  }
  .nav__list {
    list-style-type: none;
  }
  .sidebar__nav {
    padding: 25px 20px;
  }
  .nav__link {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--white);
  }
  .sidebar__nav .nav__list > .nav__link {
    margin: 35px 0;
  }
  .sidebar__nav .nav__list > .nav__link:last-child {
    border: 2px solid var(--white);
    border-radius: 30px;
    margin-top: 10px;
    padding: 10px 20px 15px;
    text-align: center;
  }
  @media screen and (min-width: 768px) {
    .header {
      padding: 60px 40px;
    }
    .header__nav {
      display: block;
      width: 100%;
    }
    .nav__list {
      display: flex;
      flex-direction: row;
      align-items: center;
      padding: 0 25px;
    }
    .nav__link {
      margin: 0 25px;
    }
    .nav__list > .nav__link:last-child {
      margin-left: auto;
      padding: 10px 20px;
      border: 2px solid var(--white);
      border-radius: 30px;
      cursor: pointer;
    }
    .header__navtarget {
      display: none;
    }
  }
</style>
