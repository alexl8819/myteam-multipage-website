---
import { Image } from 'astro:assets';

import logoSvg from '../assets/logo.svg';
import hamburgerIconSvg from '../assets/icon-hamburger.svg';

const { links } = Astro.props;
---
<header class="header">
  <Image class="header__logo" src={logoSvg} alt="main site logo" loading="eager" />
  <nav class="header__nav">
    <ol class="nav__list">
      {links.map(({url, label}) => (<li class="nav__link"><a href={url}>{label}</a></li>))}
    </ol>
  </nav>
  <Image class="header__navicon" src={hamburgerIconSvg} alt="mobile nav icon" loading="eager" />
</header>
<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
  }
  .header__logo {
    width: 128px;
    height: 32px;
  }
  .header__nav {
    display: none;
  }
  .header__navicon {
    width: 20px;
    height: 17px;
    cursor: pointer;
  }
  .nav__list {
    list-style-type: none;
  }
  .nav__link {}
  @media (width >= 640px) {
    .header__nav {
      display: block;
    }
    .header__navicon {
      display: none;
    }
  }
</style>
