---
import { Image } from 'astro:assets';

const { author, title, avatar, text } = Astro.props;

const images = import.meta.glob('../assets/avatar-*.jpg');
const avatarSrc = images[`../assets/avatar-${avatar}.jpg`]();

---

<article class="review">
  <blockquote class="review__body">
    <p class="review__text">“{text}”</p>
  </blockquote>
  <div class="review__footer">
    <h3 class="review__author">{author}</h3>
    <p class="review__title">{title}</p>
    <Image class="review__avatar" src={avatarSrc} alt={`${author}s avatar`} />
  </div>
</article>
<style>
  .review {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: url('../assets/icon-quotes.svg');
    background-repeat: no-repeat;
    background-position: top center;
    color: var(--white);
    margin: 25px;
    padding-top: 55px;
  }
  
  .review__text {
    margin-top: -20px;
    font-size: 0.938rem;
    font-weight: 600;
    text-align: center;
    line-height: 25px;
  }
  
  .review__author {
    color: var(--rapture-blue);
    font-size: 1.125rem;
    font-weight: 700;
  }
  
  .review__avatar {
    width: 62px;
    height: 62px;
    border-radius: 999px;
    border: 2px solid var(--rapture-blue);
  }
  
  .review__title {
    font-size: 0.813rem;
    font-weight: 500;
    font-style: italic;
    margin: 8px 0 15px;
  }
  
  .review__footer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 20px 0;
  }
  
  @media (--2xl-viewport) {
    .review__avatar {
      margin-top: 10px;
    }
  }
</style>
